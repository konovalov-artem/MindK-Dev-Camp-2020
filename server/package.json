{
  "name": "mindk-dev-camp-server",
  "version": "1.0.0",
  "description": "MindK dev camp social network server.",
  "author": "Konovalov Artem",
  "repository": {
    "type": "git",
    "url": "https://github.com/konovalov-artem/MindK-Dev-Camp-2020"
  },
  "license": "ISC",
  "scripts": {
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -p tsconfig.json",
    "prestart": "rimraf dist && yarn build",
    "start:dev": "concurrently --handle-input \"wait-on dist/server.js && nodemon\" \"tsc -w -p tsconfig.json\" ",
    "start:prod": "node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "knex": "^0.21.15",
    "lodash": "^4.17.20",
    "objection": "^2.2.7",
    "pg": "^8.5.1",
    "pino": "^6.8.0",
    "pino-http": "^5.3.0",
    "pino-pretty": "^4.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.14",
    "@types/pino": "^6.3.4",
    "@types/pino-http": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js",
    "exec": "node dist/server"
  }
}
